@page
@model PostgresApp.Pages.Users.EditModel

<h2>Edit User</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="User.Id"></label>
        <input asp-for="User.Id" readonly class="form-control" />
        <span asp-validation-for="User.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Name"></label>
        <input asp-for="User.Name" class="form-control" />
        <span asp-validation-for="User.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

